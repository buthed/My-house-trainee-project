<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/circle</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/secondary_color</item>
        <item name="android:textSize">@dimen/defaultTextSize</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabBackground">@color/bg</item>
        <item name="tabSelectedTextColor">@color/text_color</item>
    </style>

    <style name="MyCustomRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="MyCustomMotionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MyCustomConstraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg</item>
    </style>

    <style name="MyCustomCardView" parent="Base.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="MyCustomImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MyCustomImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg</item>
    </style>


</resources>

